{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
    },
    "outDir": "./build",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2022"],
    "strict": true
  },
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["./src/**/*"]
}
