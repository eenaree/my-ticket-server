{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@config": ["src/config/config.ts"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      "@typings/*": ["src/typings/*"],
      "@middlewares": ["src/middlewares"]
    },
    "outDir": "./build",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2022"],
    "strict": true
  },
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["./src/**/*"]
}
