{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@config": ["src/config/config.ts"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      "@typings/*": ["src/typings/*"]
    },
    "outDir": "./build",
    "allowJs": true,
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es2022"],
    "strict": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["./src/**/*"]
}
